{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/server",
    "target": "es2020",
    "types": ["node"]
  },
  "include": [
    "src/main.server.ts",
    "src/app/**/*.ts"
  ],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "entryModule": "./src/app/app.server.module#AppServerModule",
    "compilationMode": "full"
  }
}

