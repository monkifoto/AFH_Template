{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "hosting": [
    {
      "target": "afhdynamicwebsite",
      "public": "dist/adult-family-home/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrFunction"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    },
    {
      "target": "afhdynamicwebsite-test",
      "public": "dist/adult-family-home/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrFunction"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    }
  ],

  "storage": {
    "rules": "storage.rules"
  },

  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "mkdir -p functions/lib/angular/browser",
        "cp -r dist/adult-family-home/browser/* functions/lib/angular/browser/",
        "cp dist/adult-family-home/browser/index.html functions/lib/angular/browser/index.original.html",
        "cp dist/adult-family-home/server/main.js functions/lib/angular/main.js"
      ]
    }
  ]
}
